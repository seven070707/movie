.list-bg{
  background-color: rgb(236, 235, 235);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  /*离底部的距离保留100rpx*/
  padding-bottom: 100rpx;

}

.list-block {
  display: flex;
  margin-top:  50rpx;
  /* 上下40 左边57 右边自动 */
  margin: 40rpx 57rpx auto;
  height: 300rpx;
  width: 85%;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  /* 用于溢出隐藏 */
  overflow: hidden;
  /* border-radius: 13rpx; */
}

.list-card {
  display: flex;
  align-items: center;
  margin-left: 0rpx;
  margin-right: 20rpx;
  height: 300rpx;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.2);
}

.list-image {
  margin: 0 auto;
  width: 220rpx;
  height:200rpx;
}

.list-info {
  padding: 27rpx;
  margin-left: 50rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
  display: block;
}

.list-name {
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
  display: block;
}

.list-type {
  margin-top: 20rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #8B8B8B;
  display: block;
}

.list-buttom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  background-color: white;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.8);
  text-align: center;
  border-top: 2rpx solid rgb(173, 173, 173);
  align-items: center;
  justify-content: center;

}

.user-info {
  margin: 20rpx auto;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
  flex-direction: row;
  display: flex;
}

.user-image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 13rpx;
}

.user-name{
  margin: 0 auto;
  margin-left: 25rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.8);
  align-items: center;
  justify-content: center;
}

.list-msg {
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
}
 
.list-msg1 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-msg .list-msg2 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
}
 
.select_box {
    background-color: #eee;
    padding: 0 10rpx;
    width: 93%;
    position: absolute;
    top: 130rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 210rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}

.movie-record{
  width: 100%;
  display: flex;
  flex-direction: row;
  /* 横向居中 */
align-items: center;
background-color: rgb(221, 226, 230);
margin-bottom: 20rpx;
}

.record-play{
  width: 50rpx;
  height: 50rpx;
}