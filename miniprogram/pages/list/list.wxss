/* pages/list/list.wxss */
.order-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 37rpx 27rpx;
  height: 431rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.empty-image {
  margin-bottom: 29rpx;
  width: 90rpx;
  height: 90rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}

.list-bg{
  background-color: rgb(236, 235, 235);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-block {
  display: flex;
  margin-top:  50rpx;
  /* 上下40 左边57 右边自动 */
  margin: 40rpx 57rpx auto;
  height: 300rpx;
  width: 85%;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  /* 用于溢出隐藏 */
  overflow: hidden;
  /* border-radius: 13rpx; */
}

.list-card {
  display: flex;
  align-items: center;
  margin-left: 0rpx;
  margin-right: 20rpx;
  height: 300rpx;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.2);
}

.list-image {
  margin: 0 auto;
  width: 220rpx;
  height:200rpx;
}

.list-info {
  flex: 1;
  padding: 27rpx;
  margin-left: 50rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.list-name {
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}

.list-type {
  margin-top: 20rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #8B8B8B;
}

