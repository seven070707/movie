/* pages/commentlist/commentlist.wxss */
.list-bg{
  background-color: rgb(236, 235, 235);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-fix{
  width: 100%;
  height: 50rpx;
}

.list-block {
  display: flex;
  flex-direction: column;
  margin-top:  50rpx;
  /* 上下40 左边57 右边自动 */
  margin: 0rpx auto;
  width: 100%;
  background: #FFFFFF;
  /* 用于溢出隐藏 */
  overflow: hidden;
  /* border-radius: 13rpx; */
  border: 1rpx solid rgb(173, 173, 173);
}

/* .list-block:last-child{
  border-bottom: none
} */

.list-card {
  display: flex;
  align-items: center;
  margin-left: 0rpx;
  margin-right: 20rpx;
  height: 150rpx;
  
}

.user-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 13rpx;
  margin-left: 50rpx;
}

.user-name{
  margin: 0 auto;
  margin-left: 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.8);
  align-items: center;
  justify-content: center;
}

.user-content{
  margin:0rpx 50rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.8);
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.list-buttom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  background-color: white;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.8);
  text-align: center;
  border-top: 2rpx solid rgb(173, 173, 173);
  align-items: center;
  justify-content: center;

}

.movie-record{
  width: 30%;
  display: flex;
  flex-direction: row;
  /* 竖向居中 */
justify-content: center;
/* 横向居中 */
align-items: center;
background-color: rgb(221, 226, 230);
margin-left: 50rpx;
margin-bottom: 20rpx;
}

.record-play{
  width: 50rpx;
  height: 50rpx;
}